<div class="flex flex-col w-full h-full justify-center items-center">
    <div class=" bg-champagne-light w-fit h-fit px-5 py-8 rounded-lg flex flex-col">
        <p class="text-xl">{{user.username}}</p>
        <form action="/admin/update/{{user.uid}}" method="post">
            <div class="flex flex-col pb-3">
                <label for="username">Username</label>
                <input type="text" name="username" value="{{user.username}}" class=" rounded p-2">
            </div>
            <div class="flex flex-row pb-3">
                <label for="isAdmin" class="pr-2">Admin Status: </label>
                <input type="checkbox" name="changePermission" {{#if user.isAdmin}}checked{{/if}}>
            </div>
            <div class=" w-full p-1 rounded text-center bg-delft-blue text-white hover:opacity-75">
                <button type="submit" class="w-full">Update</button>
            </div>
        </form>
        <a href="/admin/delete/{{uid}}" class=" mt-3 p-1 rounded text-center bg-redwood text-white hover:opacity-75">Delete</a>
    </div>
</div>