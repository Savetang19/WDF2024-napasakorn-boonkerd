<div class="flex flex-col w-full h-full justify-center items-center">
    <div class=" bg-champagne-light w-fit h-fit px-5 py-8 rounded-lg flex flex-col md:flex-row">
        <img src="{{ song.cover_url }}" alt="" width="300px" height="300px">
        <div class="w-full md:pl-10">
            <p class="text-2xl font-medium font-primary">{{ song.title }}</p>
            <form action="/admin/song/edit/{{song.sid}}" method="post">
                <div class="flex flex-col pb-3">
                    <label for="artist">Artist</label>
                    <input type="text" name="artist" value="{{song.artist}}" class=" rounded p-2">
                </div>
                <div class="flex flex-col pb-3">
                    <label for="artist">Album</label>
                    <input type="text" name="album" value="{{song.album}}" class=" rounded p-2">
                </div>
                <div class="flex flex-col pb-3">
                    <label for="artist">Genre</label>
                    <input type="text" name="genre" value="{{song.genre}}" class=" rounded p-2">
                </div>
                <div class="flex flex-col pb-3">
                    <label for="artist">Year Release</label>
                    <input type="text" name="release_year" value="{{song.release_year}}" class=" rounded p-2">
                </div>
                <div class="w-full p-1 rounded text-center bg-delft-blue text-white hover:opacity-75">
                    <button type="submit" class="w-full">Update</button>
                </div>
            </form>
            <a href="/admin/song/delete/{{song.sid}}">
                <div class=" w-full mt-3 p-1 rounded text-center bg-redwood text-white hover:opacity-75">Delete
                </div>
            </a>
        </div>
    </div>
</div>