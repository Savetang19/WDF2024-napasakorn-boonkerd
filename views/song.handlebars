<div class=" flex flex-row">
    <img src="{{ song.cover_url }}" alt="" width="300px" height="300px">
    <div class="pl-10">
        <p class="text-3xl font-medium font-primary">{{ song.title }}</p>
        <p class="text-lg"> Release year: {{ song.release_year }}</p>
        <p class="text-lg">Genre: {{ song.genre }}</p>
        <p class="text-lg">Artist: {{ song.artist }}</p>
        <p class="text-lg">Album: {{ song.album }}</p>
        <p class="text-lg">Rating: {{ averageRating }}/5</p>
    </div>
</div>
<div>
    <div class="flex flex-row">
        <p class=" text-2xl py-5 font-primary">Reviews</p>
        <div class=" flex justify-end pt-3 h-fit w-full">
            <a href="/song/review/{{ song.sid }}"
                class=" text-lg px-2 py-1 rounded text-center bg-delft-blue text-white hover:opacity-75">Click here to
                write your review</a>
        </div>
    </div>
    {{#if reviews.length }}
    <div class="grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 justify-evenly gap-5">
        {{#each reviews}}
        <div class="w-full bg-champagne-light rounded-lg p-5">
            <p class="text-xl font-medium font-primary">{{ username }}</p>
            <p class="text-lg">{{ rating }}/5</p>
            <p class="text-lg">Review: <br />{{ comment }}</p>
        </div>
        {{/each}}
    </div>
    {{else}}
    <p class="text-xl text-redwood py-5">No reviews yet. Be the first to write one!</p>
    {{/if}}
</div>